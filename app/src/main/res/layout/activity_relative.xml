<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeActivity">
    <TextView
        android:id="@+id/billAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:text="@string/bill_amount_label"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/billAmountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/billAmountLabel"
        android:layout_marginTop="8dp"
        android:ems="8"
        android:inputType="numberDecimal"
        android:text="@string/bill_amount"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/percentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/billAmountLabel"
        android:text="@string/tip_percent_label"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/percentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/percentLabel"
        android:layout_toRightOf="@id/percentLabel"
        android:padding="5dp"
        android:text="@string/tip_percent"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnPercentDown"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/percentTextView"
        android:layout_alignTop="@id/percentLabel"
        android:text="@string/decrease"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnPercentUp"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/btnPercentDown"
        android:layout_alignTop="@id/percentLabel"
        android:text="@string/increase"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/percentLabel"
        android:layout_marginTop="55dp"
        android:padding="10dp"
        android:text="@string/tip_amount_label"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textviewTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tipLabel"
        android:layout_alignTop="@id/tipLabel"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="12dp"
        android:padding="5dp"
        android:text="@string/total_amount"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tipLabel"
        android:padding="10dp"
        android:text="@string/total_amount_label"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textviewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/totalLabel"
        android:layout_alignTop="@id/totalLabel"
        android:padding="5dp"
        android:text="@string/tip_amount"
        android:textSize="20sp"/>
</RelativeLayout>